<idea-plugin version="2">
    <id>at.jku.ssw.coco.intellij</id>
    <name>Coco/R</name>
    <version>1.0-alpha</version>
    <vendor email="sec@ssw.jku.at" url="http://www.ssw.uni-linz.ac.at/">Institute for system software</vendor>

    <description><![CDATA[
      This plugin adds support for Coco/R language and Tools.<br>
      For more details about Coco/R see <a href="http://www.ssw.uni-linz.ac.at/Research/Projects/Coco/">http://www.ssw.uni-linz.ac.at/Research/Projects/Coco/<a>
    ]]></description>

    <change-notes><![CDATA[
        Current features:<br>
        <ul>
            <li>Syntax Highlighting</li>
            <li>Basic error handling (parser only)</li>
            <li>Generate Scanner and Parser via menu action</li>
        </ul>
        TODO:<br>
        <ul>
            <li>Code completion</li>
            <li></li>
            <li>Support direct usage of generated classes within project</li>
        </ul>
    ]]>
    </change-notes>

    <idea-version since-build="131"/>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="at.jku.ssw.coco.intellij.CocoFileTypeFactory"/>
        <lang.parserDefinition language="Cocol/R" implementationClass="at.jku.ssw.coco.intellij.CocoParserDefinition"/>
        <lang.syntaxHighlighterFactory key="Cocol/R"
                                       implementationClass="at.jku.ssw.coco.intellij.CocoSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="at.jku.ssw.coco.intellij.CocoColorSettingsPage"/>
        <lang.braceMatcher language="Cocol/R" implementationClass="at.jku.ssw.coco.intellij.CocoBraceMatcher"/>

        <completion.contributor language="Cocol/R"
                                implementationClass="at.jku.ssw.coco.intellij.CocoCompletionContributor"/>
        <psi.referenceContributor implementation="at.jku.ssw.coco.intellij.reference.CocoReferenceContributor"/>
        <lang.findUsagesProvider language="Cocol/R"
                                 implementationClass="at.jku.ssw.coco.intellij.CocoFindUsagesProvider"/>


        <lang.refactoringSupport language="Cocol/R" implementationClass="at.jku.ssw.coco.intellij.CocoRefactoringProvider"/>
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="at.jku.ssw.coco.intellij.CocoLineMarkerProvider"/>
        <annotator language="Cocol/R" implementationClass="at.jku.ssw.coco.intellij.CocoAnnotator"/>

        <lang.commenter language="Cocol/R" implementationClass="at.jku.ssw.coco.intellij.CocoCommenter"/>
        <lang.foldingBuilder language="Cocol/R" implementationClass="at.jku.ssw.coco.intellij.CocoFoldingBuilder"/>
    </extensions>
    <actions>
        <group id="coco.Generate">
            <action id="at.jku.ssw.coco.intellij.RunCocoR" class="Coco.CocoRAction" text="Run _Coco/R"
                    description="Runs Coco/R on the given .ATG file"
                    icon="/at/jku/ssw/coco/intellij/icons/coco-ico.gif">
            </action>
            <separator/>
            <add-to-group group-id="ToolsMenu" anchor="before"
                          relative-to-action="com.intellij.tools.ExternalToolsGroup"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </group>
    </actions>
</idea-plugin>