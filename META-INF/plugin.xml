<idea-plugin version="2">
    <id>at.jku.ssw.coco.intellij</id>
    <name>Coco/R</name>
    <version>0.1</version>
    <vendor email="sec@ssw.jku.at" url="http://www.ssw.uni-linz.ac.at/">Institute for system software</vendor>

    <description><![CDATA[
      This plugin adds support for Coco/R language and Tools.<br>
      For more details about Coco/R see <a href="http://www.ssw.uni-linz.ac.at/Research/Projects/Coco/">http://www.ssw.uni-linz.ac.at/Research/Projects/Coco/<a>
    ]]></description>

    <change-notes><![CDATA[
        Current features:<br>
        <ul></ul>
        TODO:<br>
            <ul>
            <li>Syntax highlighting</li>
            <li>Code completion</li>
            <li>Trigger generation of Scanner & Parser directly from IDE</li>
            <li>Support direct usage of generated classes within project</li>
        </ul>
    ]]>
    </change-notes>

    <idea-version since-build="131"/>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="at.jku.ssw.coco.intellij.CocoFileTypeFactory"/>
        <lang.parserDefinition language="Cocol" implementationClass="at.jku.ssw.coco.intellij.CocoParserDefinition"/>
        <lang.syntaxHighlighterFactory key="Cocol"
                                       implementationClass="at.jku.ssw.coco.intellij.CocoSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="at.jku.ssw.coco.intellij.CocoColorSettingsPage"/>

        <completion.contributor language="Cocol" implementationClass="at.jku.ssw.coco.intellij.CocoCompletionContributor"/>
        <psi.referenceContributor implementation="at.jku.ssw.coco.intellij.CocoReferenceContributor"/>

        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="at.jku.ssw.coco.intellij.CocoLineMarkerProvider"/>
        <annotator language="JAVA" implementationClass="at.jku.ssw.coco.intellij.CocoAnnotator"/>
    </extensions>
    <actions>
        <action id="at.jku.ssw.coco.intellij.RunCocoR" class="Coco.CocoRAction" text="Run _Coco/R"
                description="Runs Coco/R on the given .ATG file" icon="/at/jku/ssw/coco/intellij/icons/coco-ico.gif">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>