<idea-plugin version="2">
    <id>at.jku.ssw.coco.intellij</id>
    <name>Coco/R</name>
    <version>1.0-alpha-20150329</version>
    <vendor email="tscheinecker@gmail.com" url="https://github.com/tscheinecker">Thomas Scheinecker</vendor>

    <description><![CDATA[
      This plugin adds support for Cocol/R language and Coco/R compiler generator.<br>
      For more details about Coco/R see <a href="http://www.ssw.uni-linz.ac.at/Research/Projects/Coco/">http://www.ssw.uni-linz.ac.at/Research/Projects/Coco/<a>
    ]]></description>

    <change-notes><![CDATA[
        <p>
        Current features:
        <br>
        <ul>
            <li>Syntax Highlighting</li>
            <li>Basic error handling (parser only)</li>
            <li>Generate Scanner and Parser via menu action</li>
            <li>Basic code completion</li>
            <li>Structure View</li>
            <li>Find usages</li>
            <li>Go to declaration</li>
            <li>Go to symbol</li>
            <li>Highlight unused characters, tokens, pragmas and productions</li>
            <li>Code Folding</li>
            <li>Inplace rename refactorings</li>
            <li>Brace matching for (), [], {}, <> and (..)</li>
        </ul>
        </p>
        <br>
        <p>
        TODO:<br>
        <ul>
            <li>Generate Scanner / Parser into target folder</li>
            <li>Allow package definition for Scanner / Parser generation</li>
            <li>Show errors during Scanner / Parser generation to user</li>
            <li>Correct lexing / parsing of IF expression (parenthesis inside expressions break parsing)</li>
            <li>Better error recovery during parsing</li>
            <li>Check that productions with formal attributes are used with actual attributes every time</li>
        </ul>
        </p>
    ]]>
    </change-notes>

    <depends>com.intellij.modules.java</depends>

    <idea-version since-build="131"/>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="at.jku.ssw.coco.intellij.CocoFileTypeFactory"/>
        <lang.parserDefinition language="Cocol/R" implementationClass="at.jku.ssw.coco.intellij.CocoParserDefinition"/>
        <lang.syntaxHighlighterFactory key="Cocol/R"
                                       implementationClass="at.jku.ssw.coco.intellij.CocoSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="at.jku.ssw.coco.intellij.CocoColorSettingsPage"/>
        <lang.braceMatcher language="Cocol/R" implementationClass="at.jku.ssw.coco.intellij.CocoBraceMatcher"/>

        <completion.contributor language="Cocol/R"
                                implementationClass="at.jku.ssw.coco.intellij.CocoCompletionContributor"/>
        <psi.referenceContributor implementation="at.jku.ssw.coco.intellij.reference.CocoReferenceContributor"/>
        <lang.findUsagesProvider language="Cocol/R"
                                 implementationClass="at.jku.ssw.coco.intellij.CocoFindUsagesProvider"/>


        <lang.refactoringSupport language="Cocol/R" implementationClass="at.jku.ssw.coco.intellij.CocoRefactoringProvider"/>
        <codeInsight.lineMarkerProvider language="Cocol/R"
                                        implementationClass="at.jku.ssw.coco.intellij.CocoLineMarkerProvider"/>

        <lang.psiStructureViewFactory language="Cocol/R" implementationClass="at.jku.ssw.coco.intellij.structure.CocoStructureViewFactory"/>


        <gotoSymbolContributor
                implementation="at.jku.ssw.coco.intellij.symbolcontributor.CocoChooseByNameTokenContributor"/>
        <gotoSymbolContributor
                implementation="at.jku.ssw.coco.intellij.symbolcontributor.CocoChooseByNameCharacterContributor"/>
        <gotoSymbolContributor
                implementation="at.jku.ssw.coco.intellij.symbolcontributor.CocoChooseByNameProductionContributor"/>

        <annotator language="Cocol/R" implementationClass="at.jku.ssw.coco.intellij.CocoAnnotator"/>

        <lang.commenter language="Cocol/R" implementationClass="at.jku.ssw.coco.intellij.CocoCommenter"/>
        <lang.foldingBuilder language="Cocol/R" implementationClass="at.jku.ssw.coco.intellij.CocoFoldingBuilder"/>
    </extensions>
    <actions>
        <group id="coco.Generate">
            <action id="at.jku.ssw.coco.intellij.RunCocoR" class="at.jku.ssw.coco.intellij.action.CocoRAction"
                    text="Run _Coco/R"
                    description="Runs Coco/R on the given .ATG file"
                    icon="/at/jku/ssw/coco/intellij/icons/coco-ico.gif">
            </action>
            <separator/>
            <add-to-group group-id="ToolsMenu" anchor="before"
                          relative-to-action="com.intellij.tools.ExternalToolsGroup"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </group>
    </actions>
</idea-plugin>